{% extends "base-art.twig" %}

{% block content %}
  <h1>{{wp_title}}</h1>
  <div class="content-wrapper">
    {% for post in posts %}
      {% include ['tease-'~post.post_type~'.twig', 'tease-art.twig'] %}
    {% endfor %}

	{% if posts.pagination %}
    {% include 'partial/pagination.twig' with { pagination: pagination } %}
  {% endif %}
  </div>

{% endblock %}
