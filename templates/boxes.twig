<div class="leoraw-boxes-container">
{% set boxes = post.meta('box_repeater') %} 

  {% for box in boxes %}
  <div class="leoraw-box-wrap"><div class="leoraw-box">
    
    <h2 class="leoraw-box-title"><a class="button" href="{{ box.link.url }}">{{ box.box_title }}</a></h2>
    {% if box.image_boxed.url %}
    <div class="leoraw-image-container">
      <img src="{{ box.image_boxed.url }}" class="hp-thumb-class" alt="{{ box.box_title }}" />
    </div>
    {% endif %}
    <div class="leoraw-box-text">{{ box.box_text_area }}</div>
    </div></div>
  {% endfor %}
</div>

