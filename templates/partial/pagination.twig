{% if posts.pagination.pages is not empty %}
<div class="tool-pagination">
    {% if posts.pagination.next %}
		<a href="{{posts.pagination.next.link}}" class="next {{posts.pagination.next.link|length ? '' : 'invisible'}}">Previous</a>
	{% endif %}
    {% if posts.pagination.prev %}
		<a href="{{posts.pagination.prev.link}}" class="prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}">Next</a>
	{% endif %}
</div>
{% endif %}
