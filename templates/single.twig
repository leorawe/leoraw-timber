{% extends "base-blog.twig" %}
{% import 'partial/macros.twig' as macros %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				
		<section class="article-content">
					<h1 class="article-h1">{{ post.title }}</h1>
					<div class="article-body">
						{{post.content}}
					</div>
					<div class="article-entry-footer">{{ macros.post_terms( post ) }}</div>

		</section>  
		<div class="comments">
   		 {% for comment in post.comments %}
					{% include 'comment.twig' %}
    {% endfor %}
		{% if(post.comment_status == "open") %}<h3>Please leave a comment! I love to hear from you.</h3>{% endif %}

    {{ function('comment_form') }}
  </div>
	
		</article>
	</div><!-- /content-wrapper -->
	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
