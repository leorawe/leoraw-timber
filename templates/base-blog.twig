{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<div id="page">
		<header class="header" >
			{% block header %}
				<div class="wrapper">
					<div class="banner">
						<div id="headerspot">
							<a href="/"><img src="{{theme.path}}/images/sketching-out.jpeg" width="982" height="192" alt="Sketching Out Blog, leoraw dot com"></a>
						</div>

					</div>
					<nav id="nav-main" class="main-navigation" role="navigation">
						{% include "menu.twig" with {'items': blog.get_items} %}
					</nav><!-- #nav -->
				</div>
				<div class="leoraw-blog-tagline">Sketching Out Blog: Sketches of art, watercolor, photos, recipes, books, interviews, Jewish topics, and Highland Park, New Jersey</div>

			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper flex">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}} leoraw-posts">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar leoraw-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>
		</div>
		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}

	</body>
</html>
